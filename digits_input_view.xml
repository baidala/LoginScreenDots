<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/login_dot_view_width"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/login_dots_view_margin"
        android:paddingEnd="@dimen/login_dots_view_margin"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        >
    <ImageView
            android:layout_width="@dimen/login_dot_size"
            android:layout_height="@dimen/login_dot_size"
            app:srcCompat="@drawable/digits_input_dot"
            android:id="@+id/iv_dot1"
            android:layout_weight="1"/>
    <ImageView
            android:layout_width="@dimen/login_dot_size"
            android:layout_height="@dimen/login_dot_size"
            app:srcCompat="@drawable/digits_input_dot"
            android:id="@+id/iv_dot2"
            android:layout_weight="1"/>
    <ImageView
            android:layout_width="@dimen/login_dot_size"
            android:layout_height="@dimen/login_dot_size"
            app:srcCompat="@drawable/digits_input_dot"
            android:id="@+id/iv_dot3"
            android:layout_weight="1"/>
    <ImageView
            android:layout_width="@dimen/login_dot_size"
            android:layout_height="@dimen/login_dot_size"
            app:srcCompat="@drawable/digits_input_dot"
            android:id="@+id/iv_dot4"
            android:layout_weight="1"/>
</LinearLayout>